[user]
  name = Laurent Guilbert
  email = laurent@guilbert.me

[core]
  editor = emacs -nw
  excludesfile = ~/.gitignore_global

[credential]
  helper = cache --timeout=3600

[alias]
  br = branch
  ci = commit
  co = checkout
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lg = log -n 5
  st = status
  type = cat-file -t

[color]
  ui = true

[push]
  default = upstream
